{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts"]
}
